.content {
  text-align: left;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.content .login-content {
  flex: 1;
  position: relative;
  z-index: 9;
  background: linear-gradient(to bottom, #606065 0%, #4a4545 50%, #5d5b5b 80%, #4b4b4e 100%);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-top: -30rpx;
  overflow: hidden;
}
.content .scroll-Y {
  height: 100%;
  position: relative;
  z-index: 10;
}
.content .text-area {
  height: 160rpx;
  background: linear-gradient(to bottom, #332f2f 0%, #4a4545 100%);
  position: relative;
  z-index: 9;
  padding-left: 50rpx;
}
.content .text-area .info-text {
  display: flex;
  align-items: center;
}
.content .text-area .info-text text {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 30rpx;
  letter-spacing: 4rpx;
}
.content .text-area image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.content .loading {
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}

