.content {
  text-align: left;
  background: linear-gradient(to bottom, #606065 0%, #4a4545 50%, #5d5b5b 80%, #4b4b4e 100%);
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.content .scroll-Y {
  height: 100%;
  white-space: nowrap;
}
.content .uni-list-cell {
  display: flex;
}
.content .uni-list-cell .uni-list-cell-db {
  font-size: 26rpx;
  flex: 1;
  display: flex;
  background: #cecccc;
  line-height: 65rpx;
  padding: 0 20rpx;
  letter-spacing: 2rpx;
  color: #696767;
  position: relative;
  z-index: 2;
  overflow: hidden;
  border: 1px solid;
}
.content .picker {
  width: 94vw;
}
.content .uni-input {
  display: flex;
  justify-content: space-between;
}
.content .xia {
  display: inline-block;
  position: relative;
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 10px solid #696767;
  right: 10rpx;
}
.content .inner-info {
  flex: 1;
  overflow: hidden;
  position: relative;
  z-index: 2;
}
.content .loading {
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}
.content .fhdw {
  position: absolute;
  bottom: 2%;
  right: 10rpx;
  color: #fff;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  z-index: 99;
  opacity: .8;
  border-radius: 50%;
  overflow: hidden;
}
.content .fhdw image {
  width: 100%;
  height: 100%;
}

